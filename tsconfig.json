{
  "compilerOptions": {
    "allowSyntheticDefaultImports": false,
    "jsx": "react",
    "noImplicitAny": true,
    "module": "es2015",
    "sourceMap": true,
    "target": "es2015",
    "types": [
      "node",
      "jest",
    ],
  },
  "exclude": [
    "node_modules",
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx"
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ]
}
